{
  "name": "Kotlin-Gradle Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20", // 带 JDK 的基础镜像
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",        // ESLint 支持
        "esbenp.prettier-vscode",        // Prettier 格式化
        "xabikos.javascriptsnippets",    // JS 代码片段
        "dsznajder.es7-react-js-snippets"// React 代码片段支持
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh"
}